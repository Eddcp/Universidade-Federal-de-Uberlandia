algoritmo "micro05"

{ Função : Escrever um algoritmo que leia o nome e o sexo de 56
	
pessoas e informe o nome e se ela e homem ou mulher.
	
No final informe o total de homens e de mulheres.
}

var
	nome, sexo: caractere;
	x, h, m: inteiro;
inicio
	para x de 1 ate 5 faca
		escreva("Digite o nome: ");
		leia(nome);
		escreva("H - Homem ou M - Mulher: ");
		leia(sexo);
		escolha sexo
			caso 'H'
				h <- h + 1;
			caso 'M'
				m <- m + 1;
			outrocaso
				escreval("Sexo so pode ser H ou M!");
		fimescolha
	fimpara

	escreval("Foram inseridos",h," Homens");

	escreval("Foram inseridos",m," Mulheres");

fimalgoritmo
